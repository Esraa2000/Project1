@model COC.Models.PhotosVideoVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}


<div class="sb2-2">
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp admin-form">
                    <div class="inn-title">
                        <h4>Add New News</h4>

                    </div>

                    <div class="tab-inn">

                        @using ((Html.BeginForm("Create", "PhotosVideos", FormMethod.Post, new { enctype = "multipart/form-data" })))

                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>PhotosVideo</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="form-group">

                                    <div class="w-100 text-right">
                                        <label class="my-4 d-block"> رفع الملف </label>

                                        @Html.TextBoxFor(model => model.fileupload, new { @type = "file" })
                                        @Html.ValidationMessageFor(model => model.fileupload, "", new { @class = "text-danger" })
                                    </div>


                                </div>


                                

                                <div class="form-group">
                                    @Html.LabelFor(model => model.VideoURL, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.VideoURL, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.VideoURL, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="btn admin-upload-btn">
                            @Html.ActionLink("Back to List", "Index")
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
